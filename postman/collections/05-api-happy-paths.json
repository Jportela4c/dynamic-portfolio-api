  "item": [
    {
      "name": "01 - Investment Simulation",
      "item": [
        {
          "name": "Simulate CDB Investment",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Get fresh token",
                  "const baseUrl = pm.environment.get('baseUrl');",
                  "pm.sendRequest({",
                  "    url: baseUrl + (baseUrl.endsWith('/api/v1') ? '' : '/api/v1') + '/oauth2/token',",
                  "    method: 'POST',",
                  "    header: {",
                  "        'Content-Type': 'application/x-www-form-urlencoded',",
                  "        'Authorization': 'Basic ' + btoa('portfolio-api-client:api-secret')",
                  "    },",
                  "    body: {",
                  "        mode: 'urlencoded',",
                  "        urlencoded: [",
                  "            { key: 'grant_type', value: 'client_credentials' },",
                  "            { key: 'scope', value: 'read write' }",
                  "        ]",
                  "    }",
                  "}, (err, res) => {",
                  "    if (!err && res.code === 200) {",
                  "        pm.environment.set('accessToken', res.json().access_token);",
                  "    }",
                  "});"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has correct structure\", () => {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('produtoValidado');",
                  "    pm.expect(json).to.have.property('resultadoSimulacao');",
                  "});",
                  "",
                  "pm.test(\"Product validation successful\", () => {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.produtoValidado).to.have.property('id');",
                  "    pm.expect(json.produtoValidado).to.have.property('nome');",
                  "    pm.expect(json.produtoValidado.tipo).to.equal('CDB');",
                  "});",
                  "",
                  "pm.test(\"Simulation result valid\", () => {",
                  "    const json = pm.response.json();",
                  "    const sim = json.resultadoSimulacao;",
                  "    pm.expect(sim.valorInicial).to.equal(10000);",
                  "    pm.expect(sim.valorFinal).to.be.greaterThan(sim.valorInicial);",
                  "    pm.expect(sim.lucro).to.equal(sim.valorFinal - sim.valorInicial);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tipoProduto\": \"CDB\",\n  \"valor\": 10000,\n  \"prazo\": 12\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/simular-investimento",
              "host": ["{{baseUrl}}"],
              "path": [ "simular-investimento"]
            }
          }
        },
        {
          "name": "Simulate LCI Investment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
                  "pm.test(\"Product type is LCI\", () => {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.produtoValidado.tipo).to.equal('LCI');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tipoProduto\": \"LCI\",\n  \"valor\": 15000,\n  \"prazo\": 24\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/simular-investimento",
              "host": ["{{baseUrl}}"],
              "path": [ "simular-investimento"]
            }
          }
        }
      ]
